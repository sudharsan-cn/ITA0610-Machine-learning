import pandas as pd
from sklearn.linear_model import LinearRegression

data = {'Month':[1,2,3,4,5],'Sales':[200,220,250,270,300]}
df = pd.DataFrame(data)

X = df[['Month']]
y = df['Sales']

model = LinearRegression()
model.fit(X,y)

future_month = pd.DataFrame({'Month':[6,7,8]})
print("Predicted Sales:", model.predict(future_month))
